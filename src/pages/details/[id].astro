--- 
import { supabase } from '~/lib/supabase';
import Layout from "../../layouts/Layout.astro";

const { id } = Astro.params;
const games = await supabase.from('game').select().eq('id', id).single();
console.log(games.data);
const details = games.data;
---



<Layout title={'GameShack - ' + details.title}>
    <section 
        transition:animate="slide"
        class="flex flex-wrap gap-4 p-4 "
    >

        <img class="w-80 rounded-lg" src={details.image} alt={details.title}>
        <div class="flex flex-col">
            <h1>{details.title}</h1>
            <h3>â‚¬{details.price}</h3>
        </div>
        
        <p>
            Available on: 
            <ul>
                {details.consoles.map((console) => (
                    <li>{console}</li>
                ))}
            </ul>
        </p>
        
    </section>
</Layout>